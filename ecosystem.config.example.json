{
  "apps": [
    {
      "name": "onze-motores-api",
      "script": "src/server.js",
      "cwd": "/var/www/backend",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "autorestart": true,
      "max_restarts": 10,
      "env": {
        "NODE_ENV": "production",
        "PORT": "4882"
      },
      "error_file": "logs/error.log",
      "out_file": "logs/output.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "min_uptime": "10s",
      "max_memory_restart": "500M"
    }
  ]
}
